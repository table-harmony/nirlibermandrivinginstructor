---
import { Image } from 'astro:assets'

const data = {
  title: 'החלטת להוציא רישיון נהיגה ?',
  description: 'קדימה בוא נצא לדרך...',
  list: [
    {
      title: 'עזרה בלימוד תאוריה',
      description: 'הסבר',
    },
    {
      title: 'לימוד נהיגה',
      description: 'הסבר',
    },
    {
      title: 'המרת רישיון',
      description: 'הסבר',
    },
  ],
}
---

<div class="py-16 sm:py-20">
  <div
    class="mx-auto grid max-w-7xl gap-10 px-4 sm:gap-16 sm:px-6 lg:grid-cols-2 lg:items-center lg:px-8"
  >
    <div class="order-1">
      <h2
        class="text-3xl font-semibold text-foreground md:text-4xl lg:text-[40px]"
      >
        {data.title}
      </h2>
      <p class="mt-6 text-lg text-muted-foreground">
        {data.description}
      </p>
      <dl class="mt-6 space-y-4 leading-7">
        {
          data.list.map((item) => {
            return (
              <div class="relative pl-8">
                <dt class="font-semibold">
                  <span>{item.title}</span>
                </dt>
                <dd class="text-sm text-muted-foreground">
                  {item.description}
                </dd>
              </div>
            )
          })
        }
      </dl>
    </div>
    <div class="order-2 overflow-hidden rounded-xl border lg:-m-4">
      <div class="relative aspect-video">
        <Image
          class="size-full object-cover object-center"
          src="/images/logo.png"
          alt="logo"
          width={1000}
          height={500}
          loading="eager"
        />
      </div>
    </div>
  </div>
</div>
