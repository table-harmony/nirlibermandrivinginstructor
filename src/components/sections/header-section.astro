---
interface Props {
  label?: string
  title: string
  subtitle?: string
}

const { label, title, subtitle } = Astro.props
---

<div class="mb-16 flex flex-col items-center text-center">
  {label ? <div class="text-gradient mb-4 font-semibold">{label}</div> : null}
  <h2 class="font-heading text-3xl font-semibold md:text-4xl lg:text-[40px]">
    {title}
  </h2>
  {
    subtitle ? (
      <p class="mt-6 text-balance text-lg text-muted-foreground">{subtitle}</p>
    ) : null
  }
</div>
